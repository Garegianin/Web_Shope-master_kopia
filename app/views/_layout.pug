html(lang="ru")
  head
    meta(charset="utf-8")
    meta(name="viewport", content="width=device-width, initial-scale=1")
    title #{settings.siteName} - #{model.title}
    // TODO оплата(обе ссылки)
    link(rel="preconnect", href="https://app.snipcart.com")
    link(rel="preconnect", href="https://cdn.snipcart.com")
    // TODO добавление библиотеки
    link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/css/bootstrap.min.css")
    // TODO иконки
    link(rel="stylesheet", href="https://use.fontawesome.com/releases/v5.1.0/css/all.css")
    // TODO оплата стили
    link(rel="stylesheet", href="https://cdn.snipcart.com/themes/v3.0.30/default/snipcart.css")
    link(rel="stylesheet", href="/stylesheets/site.css")
  body.text-center.w-100.h-100.p-3.mx-auto.flex-column
    section.container
      header.rounded-lg.m-5
      main.inner.cover(role="main")
        block content
          //mt-auto

    script(id="snipcart",
      src='https://cdn.snipcart.com/themes/v3.0.30/default/snipcart.js',
      data-api-key=settings.snipcartApiKey,
      data-config-modal-style="side"
    )
    script(
      src='https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/js/bootstrap.bundle.min.js')
    block scripts
    //header
    nav.colorheader.navbar.navbar-light.fixed-top.justify-content-between.snipcart-summary
      h5
        | _
        a(href="/")
          img.avatar3(src="https://sun9-88.userapi.com/s/v1/if2/aYEp1DOJPsSBlfPo0RKyDKhcjB5ft8f73sOYtz-T-DKAoEhNLXeSk6Eh8cKritXnXSmv-gkkGuRjPVt44YyrCd3p.jpg?size=59x50&quality=96&type=album")
        ||
        a(href="/").colortitle=settings.siteName
        | _
        a.mx-3(href="/profile")
          i.fa.fa-user
        a.mx-3(href="/shop")
          i.fa.fa-shopping-bag

      a.nav-link.snipcart-checkout(href="#")
        i.fa.fa-shopping-cart
        |  (
        span.snipcart-items-count
        | ) Корзина
    footer.mastfoot.py-3
      .inner
        a(href="https://web.telegram.org", target="_blank")
          i.fab.fa-telegram
        |  |
        |
        a(href="https://vk.com", target="_blank")
          i.fab.fa-vk
        |  |
        |
        a(href="https://mail.google.com", target="_blank")
          i.fa.fa-envelope
        |  |
        a.textright.mx-3(href="/donate")
          i.fa.fa-credit-card
